#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 編集(ホストユーザー)
      %h5 プロフィール画面を編集する
    .account-page__inner--right.user-form
      = form_for @host_user, :multipart => true do |f|
        .field
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email, autofocus: true
        .field
          .field-label
            = f.label :image do
              = f.file_field :image
        .field
          .field-label
            = f.label :text 
          .field-input
            = f.text_area :text
        .actions
          %input{type: "submit", class:"submit-btn"}