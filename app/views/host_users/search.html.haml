= form_with(url: search_host_users_path, local: true, method: :get, class: "search-form") do |form| 
    = form.text_field :keyword, placeholder: "ユーザーを検索する", class: "search-input"
    = form.submit "検索", class: "search-btn"

.contents_row                         
    - @host_users.each do |host_user|                            
        = link_to "#{host_user.name}", "#{host_user.id}"